source 'https://rubygems.org'

gem 'rails', '3.2.9'
gem 'pg'
gem 'thin'

gem 'haml'

gem 'jquery-rails'
gem 'execjs'
gem 'libv8', '~> 3.11.8'
gem 'therubyracer'

# OAuth
gem 'omniauth'
gem 'omniauth-github'

# Gravatars
gem 'gravtastic'

# Style
gem 'zurb-foundation', '~> 3.2.2'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'compass-rails' 
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Gems used only in development
group :development do
  # General debugger
  gem 'debugger'

  # Model Annotation
  gem 'annotate'

  # Better errors
  gem 'better_errors'
  gem 'binding_of_caller'
end
