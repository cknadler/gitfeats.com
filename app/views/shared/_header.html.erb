<div id="header" class="contain-to-grid">
<div class="row">
  <nav class="top-bar">

    <!-- Logo -->
    <ul>
      <li class="name">
        <img src="/assets/git-feats_header.png">
      </li>
      <li class="name">
        <% if logged_in? %>
          <h1><%= link_to "Git Feats", stats_path %></h1>
        <% else %>
          <h1><%= link_to "Git Feats", root_path %></h1>
        <% end %>
      </li>
    </ul>

    <!-- Left Nav Section -->
    <% if logged_in? %>
      <section class="search">
        <ul class="left">
          <li class="divider"></li>
          <li>
            <%= form_tag search_path do%>
            <%= text_field_tag :query %>
          </li>
          <li>
            <%= image_submit_tag("search@2x.png") %>
             <% end %>
          </li>
        </ul>
      </section>
      <section class="options">
        <ul class="left">
        <li class="divider"></li>
        <li>
             <%= link_to "stats", stats_path %>
        </li>
        </ul>
      </section>
    <% end %>

    <!-- Right Nav Section -->
    <section>
      <ul class="right">

        <!-- User is logged in -->
        <% if logged_in? %>
          <li class="avatar">
            <!-- This is a hack to get retina images from gravatar -->
            <%= link_to image_tag(@current_user.gravatar_url(size: 140),
              height: 20, width: 20, class: "rounded"), 
              @current_user %>
          </li>
          <li>
            <%= link_to @current_user.nickname, @current_user %>
          </li>
          <li>
            <%= link_to "logout", logout_path, :method => :delete %>
          </li>

        <!-- Not Logged in -->
        <% else %>
          <li>
            <%= link_to "Sign in with Github", login_path %>
          </li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
</div>
