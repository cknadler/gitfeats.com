<div id="banner">
  <div class="row">
    <div class="six columns centered">
      <center>
      <h1><img src="/assets/git-feats_logo.png">Git-Feats</h1>
      <h4>Achievements from the command line</h4>
    </center>
    </div>
  </div>
  <div class="row">
    <div class="three columns centered">
      <% if logged_in? %>
        <%= link_to "View Feats", @current_user, :class => "large button radius" %>
      <% else %>
        <%= link_to "Get Started", login_path, :class => "large button radius" %>
      <% end %>
    </div>
  </div>
</div>

<div id="social-buttons" class="row">
  <div class="five columns centered">
    <center>
    <ul id="social-buttons-list">
      <li>
        <iframe class="center" src="http://ghbtns.com/github-btn.html?user=cknadler&repo=gitfeats.com&type=watch&count=true" allowtransparency="true" frameborder="0" scrolling="0" width="107" height="20"></iframe>
      </li>
      <li>
        <iframe class="center" src="http://ghbtns.com/github-btn.html?user=cknadler&repo=gitfeats.com&type=fork&count=true" allowtransparency="true" frameborder="0" scrolling="0" width="107" height="20"></iframe>
      </li>
      <li>
        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://gitfeats.com" data-text="Command line git achievements" data-via="cknadler">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </li>
    </ul>
    <hr />
    </center>
  </div>
</div>


<div id="main-description" class="row">
  <div class="four columns">
    <center>
      <img src="/assets/gem.png"/>
      <h4>Install</h4>
    </center>
    <div class="row">
      <div class="twelve columns">
        <p>Install the gem, add your credentials and alias git</p>
      </div>
    </div>
  </div>

  <div class="four columns">
    <center>
      <img src="/assets/feat.png"/>
      <h4>Complete Feats</h4>
    </center>
    <div class="row">
      <div class="twelve columns">
        <p>Complete Feats with git on the command line and see them on your profile instantly</p>
      </div>
    </div>
  </div>

  <div class="four columns">
    <center>
      <img src="/assets/love.png"/>
      <h4>Fall In Love</h4>
    </center>
    <div class="row">
      <div class="twelve columns">
        <p>Share feats, checkout out stats and remember, git-feats loves you...</p>
      </div>
    </div>
  </div>
</div>
